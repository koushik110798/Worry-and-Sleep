\definecolor{titlebright}{rgb}{0.8, 0.8, 1}               % #fce94f  # light blue
\definecolor{subtitlemoderate}{rgb}{1, 0.8, 0.8}          % #fcaf3e  # medium blue

\setbeamercolor{headline}{bg=black}
\setbeamercolor{footline}{bg=black}
\setbeamerfont{footline}{size=\large}
\setbeamercolor{separation line}{bg=black}
\setbeamercolor{title in headline}{fg=titlebright}
\setbeamercolor{author in headline}{fg=subtitlemoderate}
\setbeamercolor{institute in headline}{fg=lightgray}

\setbeamercolor{framesubtitle}{fg=blue, bg=gray}
\setbeamercolor{author in head/foot}{fg=subtitlemoderate,bg=black}
\setbeamercolor{title in head/foot}{fg=titlebright,bg=black}
\setbeamercolor{website in footline}{fg=titlebright,bg=black}
\setbeamercolor{email in footline}{fg=titlebright,bg=black}

\setbeamercolor*{normal text}{fg=black, bg=white}
\setbeamercolor*{block body}{fg=black,bg=white}
\setbeamercolor*{block title}{fg=black,bg=lightgray}
\setbeamerfont{block title}{size=\large,series=\sc\bf}
\setbeamercolor{upper separation line head}{fg=black}

